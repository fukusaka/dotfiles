set path = ( ~/bin /usr/local/bin/mh /usr/local/games /usr/games /usr/local/bin/Wnn4 $path . )

setenv	EDITOR	vi
setenv	PAGER	/usr/bin/less	
setenv	BLOCKSIZE	K
setenv  LANG ja_JP.ujis
setenv LESSCHARSET japanese-euc
setenv  XMODIFIERS '@im=kinput2'
#setenv  MANPATH `/usr/bin/manpath`
setenv INFOPATH /usr/info:/usr/local/info-sgml:~/info
#setenv CC egcc

setenv MAIL /var/spool/mail/${LOGNAME}

alias emacs "(setenv XMODIFIERS '@im=none'; exec /usr/bin/emacs )"

setenv PRINTER "gs360"

