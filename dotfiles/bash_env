#!/bin/sh -*-shell-script-*-

sysname=$(uname -s)

if [ -n "$COMSPEC" ]; then
    sysname=Windows
fi

case $sysname in
    Linux)
        if type -t lsb_release &> /dev/null; then
            subsysname="$(lsb_release -si)"
        else
            subsysname="Unknown"
        fi

	case $subsysname in
	    Debian)
                # for Debian GNU/Linux
		export DEBFULLNAME='Shoichi Fukusaka'
		export DEBEMAIL='fukusaka@xa2.so-net.ne.jp'
		;;
	esac
	;;
    Darwin)
	if [ -d /opt/local ]; then
            # for MacPorts
	    PATH="/opt/local/bin:$PATH"
	    MANPATH="/opt/local/man:$MANPATH"
	fi
	;;
    SunOS)
	PATH=/usr/bin:/usr/sbin
	PATH=$PATH:/usr/sfw/bin
	PATH=$PATH:/usr/ccs/bin:/usr/ucb

	MANPATH=/usr/share/man
	MANPATH=$MANPATH:/usr/sfw/share/man

        # Freeware for Solars from Sunfreewave.com
	PATH=/usr/local/bin:$PATH
	MANPATH=/usr/local/share/man:$MANPATH

        #[ "$TERM" = xterm-color ] && TERM=xterm
	export TERMINFO=$HOME/.terminfo

        # pager
	export PAGER=/usr/bin/less
	;;
    Windows)
	export LANG=ja_JP.SJIS
	export NO_BASH_COMPLETION=yes
	;;
esac
unset sysname subsysname

export PATH MANPATH
