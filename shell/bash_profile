if [ -f ${HOME}/.bashrc ]; then . ${HOME}/.bashrc; fi

MYCONFDIR=${HOME}/lib/conf/shell/profile.d

for i in ${MYCONFDIR}/*.sh ; do
	if [ -x $i ]; then
		. $i
	fi
done

if [ -d ${MYCONFDIR}/`hostname -s` ]; then
	for i in ${MYCONFDIR}/`hostname -s`/*.sh ; do
		if [ -x $i ]; then
			. $i
		fi
	done
fi


unset i
unset MYCONFDIR

cd ${HOME}
